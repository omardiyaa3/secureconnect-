{
  "name": "secureconnect",
  "version": "2.0.0",
  "description": "SecureConnect - WorldPosta VPN Client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --windows",
    "build:linux": "electron-builder --linux"
  },
  "author": "WorldPosta",
  "license": "Proprietary",
  "dependencies": {
    "electron": "^28.0.0",
    "electron-updater": "^6.6.2",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.worldposta.secureconnect",
    "productName": "SecureConnect",
    "files": [
      "**/*",
      "!installer/**",
      "!dist/**",
      "!build/**",
      "!.git/**"
    ],
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "publish": {
      "provider": "generic",
      "url": "http://37.61.219.190:3000/downloads/"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png",
      "extendInfo": {
        "LSUIElement": false
      }
    },
    "dmg": {
      "title": "SecureConnect Installer",
      "contents": [
        {
          "x": 448,
          "y": 344,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 192,
          "y": 344,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "perMachine": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network",
      "icon": "assets/icon.png",
      "desktop": {
        "Name": "SecureConnect",
        "GenericName": "VPN Client",
        "Comment": "Secure VPN Connection",
        "Categories": "Network;Security;"
      }
    },
    "deb": {
      "depends": [
        "wireguard-tools"
      ],
      "afterInstall": "installer/scripts/linux-postinstall.sh"
    }
  }
}
